#!/usr/bin/env bash

# Update the Nginx configuration file to set the user to 'nginx'
# and change the listening port to 8080.

# Create a backup of the original configuration file
cp /etc/nginx/nginx.conf /etc/nginx/nginx.conf.backup

# Use sed to update the user and port in the Nginx configuration
sed -i 's/^user .*/user nginx;/g' /etc/nginx/nginx.conf
sed -i 's/listen 80;/listen 8080;/g' /etc/nginx/sites-available/default

# Ensure the nginx user exists
if ! id -u nginx &>/dev/null; then
  echo "Creating nginx user..."
  useradd -r nginx
fi

# Change the ownership of the web directory to nginx
chown -R nginx:nginx /var/www/html

# Restart Nginx to apply the changes
service nginx restart

