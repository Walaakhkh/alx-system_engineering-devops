#!/usr/bin/env bash
# Installing Nginx with the following configurations:
# Listens on port 80
# Returns a page containing "Holberton School" when queried
# at the root with curl GET request.
# Configres /redirect_me as a "301 Moved Permenently".
# Includes a custom 404 page containing "Ceci n'est pas une page"

# Update package list and install Nginx if not already installed
sudo apt-get update
sudo apt-get install -y nginx

# Create a backup of the default configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Create a custom 404 error page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html > /dev/null

# Configure Nginx to use the custom 404 error page
sudo sed -i '/server {/a \ \ \ \ error_page 404 /404.html;\n\ \ \ \ location = /404.html {\n\ \ \ \ \ \ \ \ root /var/www/html;\n\ \ \ \ \ \ \ \ internal;\n\ \ \ \ }' /etc/nginx/sites-available/default

# Test Nginx configuration for syntax errors
sudo nginx -t

# Restart Nginx to apply the changes
sudo service nginx restart
